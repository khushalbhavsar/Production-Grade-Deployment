# ShopEasy Environment Configuration
# Copy this file to .env and update values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=0

# Docker Configuration
IMAGE_NAME=khushalbhavsar/multibranch-flask-app
IMAGE_TAG=latest

# Docker Hub Credentials (for CI/CD)
DOCKER_USER=your-dockerhub-username
DOCKER_PASS=your-dockerhub-password

# GitHub Credentials (for CI/CD)
GIT_USERNAME=your-github-username
GIT_TOKEN=your-github-token

# Kubernetes Configuration
K8S_NAMESPACE=default
K8S_REPLICAS=3

# AWS EKS Configuration (optional)
AWS_REGION=us-east-1
EKS_CLUSTER_NAME=your-eks-cluster
