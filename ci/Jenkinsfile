pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }

    environment {
        IMAGE_NAME = "khushalbhavsar/multibranch-flask-app"
        GIT_USER   = "khushalbhavsar"
        GIT_EMAIL  = "khushalbhavsar@gmail.com"
        K8S_NAMESPACE = "shopeasy"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.IMAGE_TAG = "build-${BUILD_NUMBER}"
                    def branchName = env.GIT_BRANCH ?: sh(
                        script: 'git rev-parse --abbrev-ref HEAD',
                        returnStdout: true
                    ).trim()
                    env.BRANCH_NAME = branchName.replace('origin/', '')
                    echo "Building branch: ${env.BRANCH_NAME}, tag: ${env.IMAGE_TAG}"
                }
            }
        }

        stage('Setup & Test') {
            steps {
                echo "üîß Setting up Python environment and running tests..."
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r src/requirements.txt
                    pytest tests/ -v
                '''
                echo "‚úÖ Tests passed successfully!"
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker image: ${IMAGE_NAME}:${IMAGE_TAG}"
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f docker/Dockerfile ."
                sh "docker build -t ${IMAGE_NAME}:latest -f docker/Dockerfile ."
                echo "‚úÖ Docker image built successfully!"
            }
        }

        stage('Test Docker Image') {
            steps {
                echo "üß™ Testing Docker container health endpoint..."
                sh """
                    docker run -d --name test-app-${BUILD_NUMBER}-${BRANCH_NAME} \
                      -p 5001:5000 ${IMAGE_NAME}:${IMAGE_TAG}
                    sleep 10
                    curl -f http://localhost:5001/health
                    docker rm -f test-app-${BUILD_NUMBER}-${BRANCH_NAME}
                """
                echo "‚úÖ Container health check passed!"
            }
        }

        stage('Push Docker Image') {
            when { branch 'main' }
            steps {
                echo "üì§ Pushing Docker image to Docker Hub..."
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo "\$DOCKER_PASS" | docker login -u "\$DOCKER_USER" --password-stdin
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        docker push ${IMAGE_NAME}:latest
                    """
                }
                echo "‚úÖ Docker image pushed successfully!"
            }
        }

        stage('Update K8s Manifest') {
            when { branch 'main' }
            steps {
                echo "üìù Updating Kubernetes manifest with new image tag..."
                withCredentials([usernamePassword(
                    credentialsId: 'github-creds',
                    usernameVariable: 'GIT_USERNAME',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh """
                        git config user.name "${GIT_USER}"
                        git config user.email "${GIT_EMAIL}"

                        git checkout main
                        git reset --hard origin/main

                        sed -i.bak "s|image:.*|image: ${IMAGE_NAME}:${IMAGE_TAG}|" k8s/deployment.yaml
                        rm -f k8s/deployment.yaml.bak

                        git add k8s/deployment.yaml
                        git commit -m "Update image to ${IMAGE_TAG}" || true
                        git push https://\$GIT_USERNAME:\$GIT_TOKEN@github.com/khushalbhavsar/Production-Grade-Deployment.git main
                    """
                }
                echo "‚úÖ K8s manifest updated and pushed to GitHub!"
            }
        }

        // Uncomment this stage after adding 'kubeconfig' credential in Jenkins:
        // Manage Jenkins ‚Üí Credentials ‚Üí Add Credentials ‚Üí Secret file ‚Üí Upload your kubeconfig
        /*
        stage('Deploy to Kubernetes') {
            when { branch 'main' }
            steps {
                echo "üöÄ Deploying to Kubernetes cluster..."
                withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
                    sh """
                        kubectl apply -f k8s/namespace.yaml
                        kubectl apply -f k8s/ -n ${K8S_NAMESPACE}
                        kubectl rollout status deployment/shopeasy-app -n ${K8S_NAMESPACE} --timeout=300s
                    """
                }
                echo "‚úÖ Application deployed to Kubernetes successfully!"
            }
        }
        */
    }

    post {
        always {
            sh """
                docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true
                docker rmi ${IMAGE_NAME}:latest || true
            """
            cleanWs()
        }
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
