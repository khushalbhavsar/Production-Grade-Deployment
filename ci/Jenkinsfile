pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }

    environment {
        IMAGE_NAME    = "khushalbhavsar/multibranch-flask-app"
        GIT_USER      = "khushalbhavsar"
        GIT_EMAIL     = "khushalbhavsar@gmail.com"
        K8S_NAMESPACE = "shopeasy"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.IMAGE_TAG = "build-${BUILD_NUMBER}"

                    def branchName = env.GIT_BRANCH ?: sh(
                        script: 'git rev-parse --abbrev-ref HEAD',
                        returnStdout: true
                    ).trim()

                    env.BRANCH_NAME = branchName.replace('origin/', '')
                    echo "üîñ Branch: ${env.BRANCH_NAME}, Image Tag: ${env.IMAGE_TAG}"
                }
            }
        }

        stage('Setup & Test') {
            steps {
                echo "üîß Running unit tests"
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install --upgrade pip
                    pip install -r src/requirements.txt
                    pytest tests/ -v
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "üê≥ Building Docker images"
                sh """
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f docker/Dockerfile .
                    docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest
                """
            }
        }

        stage('Test Docker Image') {
            steps {
                echo "üß™ Testing container health endpoint"
                sh """
                    docker run -d --name test-app-${BUILD_NUMBER} \
                        -p 5001:5000 ${IMAGE_NAME}:${IMAGE_TAG}

                    sleep 10
                    curl -f http://localhost:5001/health

                    docker rm -f test-app-${BUILD_NUMBER}
                """
            }
        }

        stage('Push Docker Image') {
            when {
                expression { env.BRANCH_NAME == 'main' }
            }
            steps {
                echo "üì§ Pushing image to Docker Hub"
                withCredentials([usernamePassword(
                    credentialsId: 'docker-hub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                        echo "\$DOCKER_PASS" | docker login -u "\$DOCKER_USER" --password-stdin
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        docker push ${IMAGE_NAME}:latest
                    """
                }
            }
        }

        stage('Update K8s Manifest (GitOps)') {
            when {
                expression { env.BRANCH_NAME == 'main' }
            }
            steps {
                echo "üìù Updating Kubernetes manifest"
                withCredentials([usernamePassword(
                    credentialsId: 'github-creds',
                    usernameVariable: 'GIT_USERNAME',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh """
                        git config user.name "${GIT_USER}"
                        git config user.email "${GIT_EMAIL}"

                        git checkout main
                        git pull origin main

                        sed -i "s|image:.*|image: ${IMAGE_NAME}:${IMAGE_TAG}|" k8s/deployment.yaml

                        git add k8s/deployment.yaml
                        git commit -m "ci: update image to ${IMAGE_TAG}" || true
                        git push https://\$GIT_USERNAME:\$GIT_TOKEN@github.com/khushalbhavsar/Production-Grade-Deployment.git main
                    """
                }
            }
        }

        /*
        üî• OPTIONAL (NOT NEEDED IF USING ARGO CD)
        stage('Deploy to Kubernetes') {
            when {
                expression { env.BRANCH_NAME == 'main' }
            }
            steps {
                withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
                    sh """
                        kubectl apply -f k8s/namespace.yaml
                        kubectl apply -f k8s/ -n ${K8S_NAMESPACE}
                        kubectl rollout status deployment/shopeasy-app \
                            -n ${K8S_NAMESPACE} --timeout=300s
                    """
                }
            }
        }
        */
    }

    post {
        always {
            sh """
                docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true
                docker rmi ${IMAGE_NAME}:latest || true
            """
            cleanWs()
        }
        success {
            echo "‚úÖ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
